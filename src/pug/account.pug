extends layout/layout

block  variable
    - let pageName = 'account'; 

block content
    main.main.main-account 
        .account 
            .account__controll
                ul.account__tabs-list 
                    li.account__tabs-item.account__tabs-profile.account__tabs-item_active(data-type_acc="profile") Профиль
                    li.account__tabs-item.account__tabs-history(data-type_acc="history") История заказов
                    li.account__tabs-item.account__tabs-loyalty(data-type_acc="loyalty") Система лояльности
                    li.account__tabs-item.account__tabs-delivery Доставка
                        a(href="/delivery.html" title="Доставка") 
            
            ul.account__content-list
                li.account__profile.account__content-item.account__content-item_active(data-account="profile")
                    .profile__wr-img 
                        img.profile__img(src=require('../img/icons/profile-default-photo.webp') alt="фото пользователя")

                    form.profile__user-contacts-form(name="form_profile")
                        ul.profile__user-contacts-list 
                            li.profile__user-contacts-item
                                input(type="text" name="second_name" value="Фамилия" disabled)
                            li.profile__user-contacts-item
                                input(type="text" name="name" value="Имя" disabled)
                            li.profile__user-contacts-item
                                input(type="text" name="patronymic" value="Отчество" disabled)
                            li.profile__user-contacts-item
                                input(type="text" name="phone" value="Телефон" disabled)
                            li.profile__user-contacts-item
                                input(type="text" name="email" value="Электронная почта" disabled)

                        .profile__wr-gender
                            span.profile__gender-title Пол
                            span.profile__gender-wr-radio 
                                label.profile__gender-label
                                    input.profile__gender-input(type="radio" name="gender" value="man" checked disabled) 
                                    span.profile__gender-mark М
                                label.profile__gender-label
                                    input.profile__gender-input(type="radio" name="gender" value="woman" disabled) 
                                    span.profile__gender-mark Ж

                        .profile__wr-born-date 
                            label.profile__born-date-label
                                span.profile__born-date-mark Дата рождения
                                input.profile__born-date-input(type="text" name="born_date" value="__/__/____" disabled)       

                        .profile__wr-buttons 
                            //- .profile__buttons-group-edit_active
                            .profile__buttons-group.profile__buttons-group-edit.profile__buttons-group-edit_active
                                button.profile__button.profile__button_edit(type="button") Редактировать
                                button.profile__button.profile__button_delete(type="button") Удалить
                            .profile__buttons-group.profile__buttons-group-save
                                button.profile__button.profile__button_save(type="button") Сохранить

                li.account__history.account__content-item(data-account="history")
                    ul.history__list
                        li.history__item 
                            .history__delivery Доставка
                            .history__delivery-cost 
                                | #[span.history__delivery-cost_num 5000] #[span.history__delivery-cost_currency р.]

                            .history__delivery-address Москва, Полярная улица, 24 дом, 87 квартира.
                            .history__delivery-date 22 апреля, с 13:00 до 18:00

                            .history__order-number Заказ №: #[span.history__order-number_num 25689516]
                            .history__order-state
                                .history__is-paid Оплачено
                                .history__execution Выполняется

                            .history__wr-details 
                                .history__details-title
                                    p Посмотреть детали заказа
                                ul.history__details-list
                                    li.history__details-item
                                        .history__details-wr-img 
                                            img(src=require('../img/content/merch-t-shirt-white-from-center-front-content.webp') alt="фото заказанного товара")
                                        .history__details-description 
                                            p Футболка R18, “От центра к краю
                                        .history__details-amount 
                                            | #[span.history__details-amount-num 2] #[span.history__details-amount_unit шт.]
                                    li.history__details-item
                                        .history__details-wr-img 
                                            img(src=require('../img/content/accessories-nok-box-motta-content.webp') alt="фото заказанного товара")
                                        .history__details-description 
                                            p Нок-бокс
                                        .history__details-amount 
                                            | #[span.history__details-amount-num 1] #[span.history__details-amount_unit шт.]


                        li.history__item 
                            .history__delivery Доставка
                            .history__delivery-cost 
                                | #[span.history__delivery-cost_num 5000] #[span.history__delivery-cost_currency р.]

                            .history__delivery-address Москва, Полярная улица, 24 дом, 87 квартира.
                            .history__delivery-date 22 апреля, с 13:00 до 18:00

                            .history__order-number Заказ №: #[span.history__order-number_num 25689516]
                            .history__order-state
                                .history__is-paid Оплачено
                                .history__execution Выполняется

                            .history__wr-details 
                                .history__details-title
                                    p Посмотреть детали заказа
                                ul.history__details-list
                                    li.history__details-item
                                        .history__details-wr-img 
                                            img(src=require('../img/content/merch-t-shirt-white-from-center-front-content.webp') alt="фото заказанного товара")
                                        .history__details-description 
                                            p Футболка R18, “От центра к краю
                                        .history__details-amount 
                                            | #[span.history__details-amount-num 2] #[span.history__details-amount_unit шт.]
                                    li.history__details-item
                                        .history__details-wr-img 
                                            img(src=require('../img/content/accessories-nok-box-motta-content.webp') alt="фото заказанного товара")
                                        .history__details-description 
                                            p Нок-бокс
                                        .history__details-amount 
                                            | #[span.history__details-amount-num 1] #[span.history__details-amount_unit шт.]



            
